<h1><%= t('.title')%></h1>

<div class="buttons_panel">
	<%= link_to "Нова категорія", new_admin_category_path, class: 'btn btn-outline-primary btn-sm' %>
</div>   

<section id='categories'>
	<table class="table">
		<thead >
				<tr>
					<th>#</th>
					<th>Назва</th>
					<th>Батьківська категорія</th>
				</tr>
		</thead>
		<tbody>
			<% @categories.each_with_index do |category, index| %>
				<tr>
					<td><%= index + 1 %></td>
					<td><%= category.name %></td>
					<td><%= category.parent.name if category.parent.present? %></td>
					<td>
						<%= link_to "Змінити", edit_admin_category_path(category), class: 'btn btn-outline-primary btn-sm' %>
						<%= link_to "Видалити", admin_category_path(category), method: :delete, date: {confirm: 'Ви впевнені'}, class: 'btn btn-outline-dander btn-sm' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>	
</section>