<div class="submenu">
    <h2> Категорії </h2>
    <ul class='nav nav-polls nav-stacked'>
        <% Category.roots.each do |category| %>
            <li class='nav-item' >
                <%= link_to category.name, category, class: "nav-link #{'active' if current_page?(category_path(category)) || @book.present? && @book.category == category }" %>
                <%= render 'shared/submenu_categories', categories: category.root.descendants.arrange %>
            </li>
        <% end %>
    </ul>
</div>